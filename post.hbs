{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<div class="progress-container">
	<span class="progress-bar"></span>
</div>

<header id="post-header"{{#if feature_image}} class="has-cover" {{/if}}>
	<div class="inner">
		<nav id="navigation">
			{{#if @site.logo}}
			<span class="blog-logo">
				<a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{t "Blog Logo"}}" /></a>
			</span>
			{{else}}
			<span id="home-button" class="nav-button">
				<a class="home-button" href="{{@site.url}}" title="{{t "Home"}}"><i class="ic ic-arrow-left"></i> {{t "Home"}}</a>
			</span>
			{{/if}}
			{{#if @site.navigation}}
			<span id="menu-button" class="nav-button">
				<a class="menu-button"><i class="ic ic-menu"></i> {{t "Menu"}}</a>
			</span>
			{{/if}}
		</nav>
		<h1 class="post-title">{{{title}}}</h1>
		{{#if custom_excerpt}}
		<div class="post-excerpt">
			{{custom_excerpt}}
		</div>
		{{/if}}
		<span class="post-meta">{{authors separator=", "}} | <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> | {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
		{{#if feature_image}}
		<div class="post-cover cover">
			<img
			srcset="{{img_url feature_image size="s"}} 320w,
              {{img_url feature_image size="m"}} 640w,
              {{img_url feature_image size="l"}} 960w,
              {{img_url feature_image size="xl"}} 1920w"
      src="{{img_url feature_image size="xl"}}"
			alt="{{title}}" />
		</div>
		{{/if}}
	</div>
</header>

<main class="content" role="main">
	<article class="{{post_class}}">
		<div class="inner">

			<section class="post-content">

				{{#if access}}
				{{!-- if the user has access to this post, show it to them --}}

					{{content}}

				{{else}}
        {{!-- if the user does not have access, show them an upgrade CTA --}}

					<p>You don't have access to this post on <strong>{{@site.title}}</strong> at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access.</p>

					<aside class="post-upgrade">
						<div class="post-upgrade-info">
							{{#if @member}}
								<p>{{t "This post is for paying subscribers only."}}</p>
							{{else}}
								<p>{{t "This post is for subscribers only."}}</p>
							{{/if}}
							<p>{{t "Already have an account?"}} <a href="/signin/">{{t "Sign in"}}</a></p>
						</div>
						<p><a class="post-upgrade-cta" href="/signup/">{{t "Subscribe now"}}</a></p>
					</aside>

				{{/if}}

			</section>

			<section class="post-info">

				<div class="post-share">
					<span class="post-info-label">{{t "Share:"}}</span>
					<a class="twitter" href="https://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
						<i class="ic ic-twitter"></i><span class="hidden">Twitter</span>
					</a>
					<a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
						<i class="ic ic-facebook"></i><span class="hidden">Facebook</span>
					</a>
				</div>

				{{#if tags}}
				<aside class="post-tags">
					<span class="post-info-label">{{t "Tags:"}}</span>
					{{tags separator=" "}}
				</aside>
				{{/if}}

				<div class="clear"></div>

				{{#has author="count:>1"}}
					<aside class="post-authors">
						<p class="post-authors-info">{{t "This post was a collaboration between:"}}</p>
						<p class="post-authors-authors">{{authors separator=", "}}</p>
					</aside>
        {{else}}
					{{#primary_author}}
						<aside class="post-author">
							<figure class="post-author-avatar avatar">
								{{#if profile_image}}
									<img src="{{profile_image}}" alt="{{name}}" />
								{{/if}}
							</figure>
							<div class="post-author-bio">
								<h4 class="post-author-name"><a href="{{url}}">{{name}}</a></h4>
								{{#if bio}}
									<p class="post-author-about">{{{bio}}}</p>
								{{/if}}
								{{#if location}}
									<span class="post-author-location"><i class="ic ic-location"></i> {{location}}</span>
								{{/if}}
								{{#if website}}
									<span class="post-author-website"><i class="ic ic-link"></i> <a href="{{website}}">{{t "Website"}}</a></span>
								{{/if}}
								{{#if twitter}}
									<span class="post-author-twitter"><i class="ic ic-twitter"></i> <a target="_blank" href="{{twitter_url}}">Twitter</a></span>
								{{/if}}
								{{#if facebook}}
									<span class="post-author-facebook"><i class="ic ic-facebook"></i> <a target="_blank" href="{{facebook_url}}">Facebook</a></span>
								{{/if}}
							</div>
							<div class="clear"></div>
						</aside>
					{{/primary_author}}
        {{/has}}

			</section>


			<section class="post-comments">
				<a id="show-disqus" class="post-comments-activate">{{t "Show Comments"}}</a>
			   <div id="disqus_thread"></div>
			</section>

      {{#if @labs.subscribers}}
      <section class="post-subscribe">
				<p>{{t "Get the latest posts delivered right to your inbox."}}</p>
        {{subscribe_form placeholder=(t "Your email address") form_class="post-subscribe-form" input_class="post-subscribe-input" button_class="post-subscribe-button"}}
      </section>
      {{/if}}

			{{!-- Links to Previous/Next posts --}}
			<aside class="post-nav">

				{{!-- If there's a next post, display it using the same markup included from - partials/post-card.hbs --}}
				{{#next_post}}
					<a class="post-nav-next" href="{{url}}">
						<section class="post-nav-teaser">
							<i class="ic ic-arrow-left"></i>
							<h2 class="post-nav-title">{{title}}</h2>
							<p class="post-nav-excerpt">{{excerpt words="12"}}&hellip;</p>
						</section>
					</a>
				{{/next_post}}

				{{!-- If there's a previous post, display it using the same markup included from - partials/post-card.hbs --}}
				{{#prev_post}}
					<a class="post-nav-prev" href="{{url}}">
						<section class="post-nav-teaser">
							<i class="ic ic-arrow-right"></i>
							<h2 class="post-nav-title">{{title}}</h2>
							<p class="post-nav-excerpt">{{excerpt words="12"}}&hellip;</p>
						</section>
					</a>
				{{/prev_post}}
				<div class="clear"></div>
			</aside>

		</div>
	</article>
</main>

{{/post}}
